rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their own profile picture
    match /profilePictures/{userId}/{fileName} {
      // Only allow authenticated users to upload their own profile picture
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Ensure the file is an image and less than 5MB
      allow create: if request.resource.contentType.matches('image/.*') &&
                    request.resource.size < 5 * 1024 * 1024;
    }
  }
}
